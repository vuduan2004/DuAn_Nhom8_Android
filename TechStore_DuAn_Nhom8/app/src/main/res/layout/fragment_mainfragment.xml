<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6dde7"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/botrondkd"
        android:layout_alignParentTop="true"

        android:id="@+id/topView"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F7F7F7"
        android:layout_alignParentBottom="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/headerView"
        android:padding="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/techstore"
            app:strokeColor="#fff"
            app:strokeWidth="5dp"
            android:padding="5dp"
            android:id="@+id/imgAvatar_Main"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/tvName_Main"
            android:layout_width="159dp"

            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="Tech Store"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh Mục Sản Phẩm "
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@id/headerView"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp"


        android:id="@+id/Management"/>

    <GridLayout
        android:id="@+id/GridMenu1"
        android:layout_width="289dp"
        android:layout_height="300dp"
        android:layout_below="@id/Management"
        android:layout_marginLeft="60dp"
        android:background="@drawable/botroninput">


        <androidx.cardview.widget.CardView
            android:id="@+id/nav_Ql_ProductType"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="110dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDienThoai"
                    android:layout_width="35dp"
                    android:layout_height="27dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textColor="#6A4B70" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nav_Ql_Products"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_margin="8dp"
            android:layout_marginTop="110dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lap" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LapTop"
                    android:textColor="#6A4B70" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nav_Ql_Bill"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="110dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/dongho" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đồng Hồ"
                    android:textColor="#6A4B70" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>


</RelativeLayout>